{
  "name": "docker-ffmpeg-converter",
  "version": "1.0.0",
  "description": "Docker image that watches a directory, converts files and outputs them to another directory",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx src/startService.ts",
    "build": "wireit",
    "bundle": "wireit",
    "check": "wireit",
    "check:fix": "wireit",
    "ci": "wireit",
    "dependency-update": "npm-check-updates -u --filterVersion \"/^[~^<>]| - |\\.x$/\" --deep && pnpm install --no-frozen-lockfile",
    "prepare": "husky"
  },
  "wireit": {
    "build": {
      "command": "tsc"
    },
    "bundle": {
      "command": "esbuild build/startService.js --bundle --platform=node --target=node22 --outdir=./build/bundle",
      "dependencies": [
        "build"
      ]
    },
    "check": {
      "command": "biome check"
    },
    "check:fix": {
      "command": "biome check --write --unsafe --no-errors-on-unmatched"
    },
    "ci": {
      "dependencies": [
        "check",
        "build"
      ]
    }
  },
  "keywords": [],
  "author": "Kenneth Wu√ümann",
  "license": "GPL-3.0",
  "lint-staged": {
    "*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^24",
    "esbuild": "^0.27.2",
    "ffmpeg-static": "^5.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wireit": "^0.14.12"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "execa": "8.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.2.1",
    "zx": "^8.8.5"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
}
