{
	"name": "docker-ffmpeg-converter",
	"version": "1.0.0",
	"description": "Docker image that watches a directory, converts files and outputs them to another directory",
	"main": "src/index.ts",
	"scripts": {
		"install": "bun run node_modules/ffmpeg-static/install.js",
		"dev": "bun run src/startService.ts --watch",
		"start": "wireit",
		"build": "wireit",
		"format": "wireit",
		"ci": "wireit",
		"dependency-update": "npm-check-updates -u --filterVersion \"/^[~^<>]| - |\\.x$/\" --deep && npm i",
		"prepare": "git --version >/dev/null 2>&1 && husky install || echo \"Git not installed\""
	},
	"wireit": {
		"build": {
			"command": "bun build ./src/startService.ts --target bun --outdir ./build"
		},
		"start": {
			"command": "bun run ./build/startService.js",
			"dependencies": ["build"]
		},
		"lint:check": {
			"command": "rome check ."
		},
		"lint:fix": {
			"command": "rome check --apply-unsafe ."
		},
		"format:check": {
			"command": "rome format ."
		},
		"format:fix": {
			"command": "rome format --write ."
		},
		"format": {
			"dependencies": ["format:fix", "lint:fix"]
		},
		"ci": {
			"dependencies": ["lint:check", "format:check", "build"]
		}
	},
	"keywords": [],
	"author": "Kenneth Wu√ümann",
	"license": "GPL-3.0",
	"lint-staged": {
		"*.ts": "rome check --apply-unsafe",
		"*.{ts,json}": "rome format --write"
	},
	"devDependencies": {
		"@types/node": "18",
		"bun-types": "latest",
		"ffmpeg-static": "^5.2.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"npm-check-updates": "^16.10.17",
		"rome": "12.1.3",
		"typescript": "^5.1.6",
		"wireit": "^0.10.0"
	},
	"dependencies": {
		"execa": "^7.2.0",
		"winston": "^3.10.0",
		"winston-daily-rotate-file": "^4.7.1",
		"zod": "^3.21.4",
		"zx": "^7.2.3"
	}
}
